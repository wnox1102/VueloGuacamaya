mixin CrearVuelos()
    .row.align-items-center.justify-content-center
        .col-sm-6
            div(class="card card-lift shadow border-0",style="background-color:#e5e5e5")
                br
                .card-title 
                    h5#titleCard REGISTAR UN NUEVO VUELO
                hr
                .card-body
                    form(action="", method="POST")
                        .form-group.mb-3
                            label Origen:
                            select.form-control(name="origen", id="origen")
                                option(value="Miami") Miami
                                option(value="Londres") Londres
                                option(value="Atlanta") Atlanta
                                option(value="Caracas") Caracas
                        .form-group
                            label Destino:
                            select.form-control(name="destino", id="destino")
                                option(value="Miami") Miami
                                option(value="Londres") Londres
                                option(value="Atlanta") Atlanta
                                option(value="Caracas") Caracas
                        .form-group
                            label Avion:
                            select.form-control(name="destino", id="destino")
                                option(value="modeloavion") Modelos aviones
                        .row.align-items-center.justify-content-center
                            button.btn.btn-info.btn-lg(type="submit") CREAR