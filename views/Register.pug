extends Base

block content
    .row
        .col-sm-6
            .card(style="position:relative;left:50%;top:30%;opacity:0.88 ;", class="shadow-lg p-3 mb-5 rounded")
                .card-title(style="text-align:center;") #{title}
                hr
                .card-body
                    form(method='POST' action='/register')
                        div.form-group
                            label(for='name') Name:
                            input#name.form-control(type='text', placeholder='first and last' name='name')
                        div.form-group
                            label(for='email') Email:
                            input#email.form-control(type='email', placeholder='name@email.com' name='email')
                        div.form-group
                            label(for='pw') Password:
                            input#pw.form-control(type='password' name='password' placeholder="Password")
                        div.form-group
                            label(for='pw2') Confirm Password:
                            input#pw2.form-control(type='password' name='confirmPassword' placeholder="Confirm your password")  
                        button.btn.btn-primary(type='submit') Sign up

        